<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3>Listing Blogs</h3><span><%= link_to 'New Blog', new_blog_path %></span>
  </div>

  <table id="tableMyRecentBlogs" class="table table-stripped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th>Comment Count</th>
          <th>Unread Comments</th>
          <th colspan="3">options</th>
        </tr>
      </thead>

      <tbody>
      <% if @blogs.count > 0 %>
        <% @blogs.each do |blog| %>
            <tr>
              <td><%= blog.title %></td>
              <td><%= "body" %></td>
              <td>0</td>
              <td>zero</td>
              <td><%= link_to 'Show', blog_path(blog), class: 'btn btn-mini btn-primary' %></td>
              <td><%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-mini btn-success' %></td>
              <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger' %></td>
            </tr>
          <% end %>
      <%else%>
        <tr>
          <td colspan="4">no blogs</td>
          <td colspan="3"><%= link_to 'Add New Blog', new_blog_path %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
</div>

<p id="notice"><%= notice %></p>

<div class="panel panel-default">
	<div class="panel-heading">
		<h1><%= @blog.title %></h1>
		<span><%= link_to 'Edit this Blog', edit_blog_path(@blog) %></span>
	</div>
	<p><%= @blog.body %></p>
	<div class="panel-footer">
		<%= link_to 'Delete this Blog', @blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
	</div>

</div>



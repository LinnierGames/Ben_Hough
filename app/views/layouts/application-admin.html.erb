            <strong><i class="glyphicon glyphicon-link"></i> Yield</strong>

            <hr>

			<%= yield %>

        </div>
    </div>
</div>

<div class="modal fade" id="answerQuestion" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h4>Answer Question</h4>
			</div>
			<div class="modal-body">
				<h5>Question:</h5>
					<p><%= %></p>
				<h5>Enter Answer:</h5>
				  <div class="input-group col-lg-3">
				  	<ipnut type="text" class="form-control" placeholder="answer here">
				  </div>
			</div>
			<div class="modal-footer">
				<a class="btn btn" data-dismiss="modal">cancel</a>
				<a class="btn btn-primary" data-dismiss="modal">save</a>
			</div>
		</div>
	</div>
</div>

		</div>

	</body>
</html>

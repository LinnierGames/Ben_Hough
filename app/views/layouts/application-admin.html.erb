	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div class="container">
<!-- header -->
<div id="top-nav" class="navbar navbar-inverse navbar-static-top">
    <div class="container-fluid">
        <div class="navbar-header">
        	<%= link_to "Administrator's Site", admin_index_path, class: "navbar-brand" %>
        </div>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Logout</a></li>
        </ul>
    </div>
    <!-- /container -->
</div>
<!-- /Header -->

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3">
            <!-- Left column -->

            <strong><i class="glyphicon glyphicon-link"></i> Resources</strong>

            <hr>

            <ul class="nav nav-pills nav-stacked">
                <li class="nav-header">Managing the Database</li>
                <li><%= link_to 'Blogs', blogs_path %></li>
                <li><%= link_to 'Blog Comments', blog_comments_path %></li>
                <li><%= link_to 'FAQs', faqs_path %></li>
            </ul>

            <ul class="nav nav-pills nav-stacked">
                <li class="nav-header">Add New</li>
                <li><%= link_to 'Blog', new_blog_path %></li>
                <li><%= link_to 'Blog Comment', new_blog_comment_path %></li>
                <li><%= link_to 'FAQ', new_faq_path %></li>
            </ul>

            <ul class="nav nav-pills nav-stacked">


<style type="text/css">
	table, th, td {
	 	margin-left: 24px;
		width: auto;
		background-color: white;
	    border: 1px solid black;
	    border-collapse: collapse;

	} table th, td {
		text-align: left;
	    padding: 6px 12px;
	} table td a {
		padding: 6px;

	}

</style><h1>Table of Blogs</h1>
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>title</th>
      <th>body</th>
      <th>dateCreated</th>
      <th>unread</th>
      <th>comments</th>
      <th colspan="3">options</th>
    </tr>
  </thead>

  <tbody>
	<% if @Blogs.count > 0 %>
		<% @Blogs.each do |blog| %>
	      <tr>
	        <td><%= blog.id %></td>
	        <td><%= blog.title %></td>
	        <td><%= blog.body %></td>
	        <td><%= blog.created_at %></td>
	        <td>zero</td>
	        <td>zero</td>
	        <td><%= link_to 'Show', blog %></td>
	        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
	        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	<%else%>
		<tr>
			<td colspan="8">no blogs</td>
		</tr>
	<% end %>
  </tbody>
</table>

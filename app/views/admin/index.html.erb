<style type="text/css">
	body {
		background-image: url( "texture-blueprint");
	    background-repeat: repeat;
	    background-position: left top;

	}

</style>
<div class="panel panel-default">
	<div class="panel-heading">
		<h3><a href="blogs/index.html">My Most Recent Blogs</a></h3>
	</div>
	<table id="tableMyRecentBlogs" class="table table-stripped">
	  <thead>
	    <tr>
	      <th>Title</th>
	      <th>Body</th>
	      <th>Comment Count</th>
	      <th>Unread Comments</th>
	      <th colspan="3">options</th>
	    </tr>
	  </thead>

	  <tbody>
		<% if @myRecentBlogs.count > 0 %>
			<% @myRecentBlogs.each do |blog| %>
		      <tr>
		        <td><%= blog.title %></td>
		        <td><%= "body" %></td>
		        <td>0</td>
		        <td>zero</td>
		        <td><%= link_to 'Show', blog %></td>
		        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
		        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		      </tr>
		    <% end %>
		<%else%>
			<tr>
				<td colspan="4">no blogs</td>
				<td colspan="3"><%= link_to 'Add New Blog', new_blog_path %></td>
			</tr>
		<% end %>
	  </tbody>
	</table>
</div>
<div class="panel panel-default">
	<div class="panel-heading">
		<h3><a href="blogs/index.html">My Unasnwered Questions</a></h3>
	</div>
	<table id="tableMyA" class="table table-stripped">
	  <thead>
	    <tr>
	      <th>Question</th>
	      <th>Tile Elapsed</th>
	      <th>Action</th>
	      <th colspan="3">options</th>
	    </tr>
	  </thead>

	  <tbody>
		<% if @myUnasnweredQuestions.count > 0 %>
			<% @myUnasnweredQuestions.each do |question| %>
		      <tr>
		        <td><%= question.question %></td>
		        <td><%= question.answer %></td>
		        <td>answer question</td>
		        <td><%= link_to 'Show', question %></td>
		        <td><%= link_to 'Edit', edit_faq_path(question) %></td>
		        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		      </tr>
		    <% end %>
		<%else%>
			<tr>
				<td colspan="7">all questions answered</td>
			</tr>
		<% end %>
	  </tbody>
	</table>
</div>

